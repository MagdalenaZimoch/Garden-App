<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0D1B0C"
    android:gravity="center_horizontal|top"
    android:orientation="vertical"
    android:overScrollMode="ifContentScrolls"
    android:padding="10dp"
    android:scrollbarAlwaysDrawVerticalTrack="true"
    tools:context=".MenuActivity">

    <TextView
        android:id="@+id/Informacja_garden"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        android:gravity="center"
        android:text="@string/txt_Twoj_Ogrodek"
        android:textColor="@android:color/background_light"
        android:textSize="30sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/button_background">

            <Button
                android:id="@+id/zmien_status_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="56dp"
                android:layout_marginLeft="56dp"
                android:text="@string/zmien_status_btn"
                app:layout_constraintBaseline_toBaselineOf="@+id/obserwacje_btn"
                app:layout_constraintStart_toStartOf="parent" />

            <Button
                android:id="@+id/obserwacje_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="63dp"
                android:layout_marginEnd="88dp"
                android:layout_marginRight="88dp"
                android:text="@string/btn_obserwacje"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/status_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="52dp"
                android:layout_marginLeft="52dp"
                android:text="@string/status_txt"
                android:textColor="@android:color/background_light"
                android:textSize="12sp"
                app:layout_constraintBaseline_toBaselineOf="@+id/txt_Status"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/nazwa_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="2dp"
                android:text="@string/przykladowa_nazwa_ogrodka"
                android:textColor="@android:color/background_light"
                android:textSize="20sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/txt_Status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:layout_marginEnd="2dp"
                android:layout_marginRight="2dp"
                android:text="@string/txt_status"
                android:textColor="@android:color/background_light"
                app:layout_constraintBottom_toTopOf="@+id/zmien_status_btn"
                app:layout_constraintEnd_toStartOf="@+id/status_txt"
                app:layout_constraintTop_toBottomOf="@+id/nazwa_txt" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom|center_horizontal"
        android:orientation="vertical">

        <Button
            android:id="@+id/dodaj_nasiona_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@android:drawable/ic_input_add"
            android:text="@string/dodaj_nasiona_txt" />
    </LinearLayout>

</LinearLayout>