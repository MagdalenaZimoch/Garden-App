<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0D1B0C"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".MenuActivity"
    android:overScrollMode="ifContentScrolls"
    android:scrollbarAlwaysDrawVerticalTrack="true">

    <Button
        android:id="@+id/my_garden_button"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@drawable/button_background"
        android:padding="10dp"
        android:textColor="#ffffff"
        android:text="Mój ogródek" />
    <Button
        android:id="@+id/add_seed_button"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@drawable/button_background"
        android:drawableLeft="@android:drawable/ic_input_add"
        android:padding="10dp"
        android:textColor="#ffffff"
        android:text="Dodaj nowe nasiona" />

    <Button
        android:id="@+id/my_reminder"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@drawable/button_background"
        android:drawableLeft="@android:drawable/ic_input_add"
        android:padding="10dp"
        android:textColor="#ffffff"
        android:text="@string/moje_powiadomienia_button_text" />

</LinearLayout>